<style>
.mdl-card {
  margin: 0 auto;
}

.mdl-card__title h5 {
  width: 100%;
  text-align: center;
  margin: 0;
}

nav {
  position: fixed;
  top: 10px;
  left: 10px;
}
</style>

<nav>
  <a href="/checkin" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored" title="Back">
    <i class="material-icons">arrow_back</i>
  </a>
</nav>

<div class="mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand">
    <h5><%= title %>.<br/>It is <span id="timer" style="font-weight: bold;">-</span></h5>
  </div>
  <div class="mdl-card__supporting-text">
    <p><%- checkinStatus.message %></p>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" <%= (!checkinStatus.allowed) ? 'disabled' : '' %>>
      CheckIn
    </button>
  </div>
</div>

<script defer src="http://momentjs.com/downloads/moment.min.js"></script>
<script>
var timerContainer;
$(function() {
  timerContainer = $('#timer');
  displayCurrentTime(timerContainer);
  setInterval(function() {
    displayCurrentTime(timerContainer);
  }, 1000);
});

function displayCurrentTime(container) {
  container.html(moment().format('h:mm A'));
}
</script>
